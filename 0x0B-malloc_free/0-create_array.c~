#include "main.h"
#include <stdio.h>
#include <stdlib.h>

/**
 *create_array - creates an array of chars
 *@size: size of array
 *@c: character
 *
 *Return: NULL if size = 0 or fails or pointer to the array
 */

char *create_array(unsigned int size, char c)
{
	char *characters;
	unsigned int i;

	if (size == 0 || characters == NULL)
		return (NULL);

	characters = (char *)malloc(size * sizeof(char));
	for (i = 0; i < size; i++)
	{
		characters[i] = c;
	}

	return (characters);
}
