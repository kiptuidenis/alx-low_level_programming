#include <stdio.h>
#include <stdlib.h>
#include <errno.h>

/**
 *main - main function, adds positive numbers
 *@argc: argument count
 *@argv: array of arguments
 *Return: 0 if success
 */

int main(int argc, char *argv[])
{
	int i;
	char *endptr;
	int result = 0;
	int num;

	if (argc == 1)
	{
		printf("0\n");

		return (0);
	}

	for (i = 1; i < argc; i++)
	{
		num = strtol(argv[i], &endptr, 10);

		if (endptr == *argv[i] || *endptr != '\0')
		{
			printf("Error\n");

			return (1);
		}

		else
		{
			result = num + result;
		}
	}

	printf("%d\n", result);
	return (0);
}
